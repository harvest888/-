.category_content {
  height: calc(100vh - 90rpx);
  display: flex;
}
.category_content .left_menu {
  flex: 1;
}
.category_content .left_menu .left_items {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.category_content .left_menu .active {
  background-color: var(--themeColor);
  font-weight: 600;
}
.category_content .right_content {
  flex: 2;
}
.category_content .right_content .right_goods .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category_content .right_content .right_goods .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.category_content .right_content .right_goods .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.category_content .right_content .right_goods .goods_list navigator image {
  width: 80%;
}
